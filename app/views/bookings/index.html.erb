
<div class="container">
<div class="row">
<div class="col-xs-4">
  <h1>LIST OF PENDING BOOKINGS</h1>


  <% @bookings.each do |booking| %>
  <div class="booking_index tab">
    <%= booking.visit.tour.name + " with " %>
    <%= link_to booking.visit.tour.guide.first_name, booking_path(booking), remote: true %>
     - booking for <%= booking.visit.start_time.strftime("%Y-%d-%m")  %> at
     <%= booking.visit.start_time.strftime("%H:%M") %>

    <p class="booking_index">
      Confirmation to join tour:
      <% if booking.confirmed == false %>

      Pending

      <% if current_user.type == "Guide" %>
      <%= link_to "Accept", booking_path(booking), method: :patch %>
      <% end %>

      <% else %>
      Accepted
      <% end %>
    </p>

  </div>
  <% end %>
  </div>

  <div class="col-xs-8" id="single-message">

  <%= render "message_show", booking: @bookings.first %>

  </div>
</div>
</div>

