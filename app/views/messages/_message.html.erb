<div class="message <%= user_is_messages_author ? "right" : "" %>">

 <% if message.user.photo? %>
 <%= cl_image_tag message.user.photo.path, width: 40, height: 40, crop: :fit, class: "avatar" %>
 <% else %>
 <%= image_tag "default_avatar", width: 40, height: 40, crop: :fit, class: "avatar" %>
 <% end %>

 <%= message.user.first_name %>
 <div class="message-content"><%= message.content %></div>
</div>
