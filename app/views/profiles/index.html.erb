<br><br>
<ol>
	<% @guides.each do |guide| %>
	<li>
		<%= link_to guide.first_name, profile_path(guide) %>

		<ol>
			<% guide.tours.each do |tour| %>
			<li>
				<%= tour.description %>
			</li>
			<% end %>
		</ol>

	</li>
	<% end %>
</ol>


<div class="container">
	<div class="row">

		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators"></ol>
			<!-- Wrapper for slides -->

			<div class="carousel-inner"><div class="col-xs-3"></div></div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
			</a>
		</div>

	</div>
</div>


<% content_for :javascript do %>
<script>
	var guide_img = ["http://placehold.it/300/f44336/000000", "http://placehold.it/300/e91e63/000000", "http://placehold.it/300/f44500/000000", "http://placehold.it/300/f49000/000000", "http://placehold.it/300/f78336/000000"]

	$(document).ready(function(){
		for(var i=0 ; i< guide_img.length ; i++) {
			<% @guides.each do |guide| %>
			$('<div class="item"><img src="'+guide_img[i]+'"><div class="carousel-caption"><%= guide.first_name %></div></div>').appendTo('.carousel-inner');
			$('<li data-target="#carousel-example-generic" data-slide-to="'+i+'"></li>').appendTo('.carousel-indicators')
			<% end %>
		}

		$('.item').first().addClass('active');
		$('.carousel-indicators > li').first().addClass('active');
		$('#carousel-example-generic').carousel();
	});
</script>
<% end %>

