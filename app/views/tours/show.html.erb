<div class="container">
  <div class="row">
    <div class="col-xs-8">
        <h1><%= @tour.name %></h1>
        <p>This tour takes place in: <%= @tour.city %></p>
        <p>The meeting point is: <%= @tour.address %></p>
      <h5>Description</h5>
        <p><%= @tour.description %></p>
    </div>

<div id="wrapper">
  <div id="map" style="width: 50%; height: 400px;"></div>
      <%= content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
            });
          });
      <% end %>
      <% end %>
      </div>
      <div class="col-xs-4" id="calendar">

        <h3>Offered dates for this tour:</h3>
          <%= month_calendar events: @tour.visits do |date, tour_visits| %>
            <%= date.day %>
            <% tour_visits.each do |one_visit| %>
              <div>
                <%= link_to one_visit.start_time.strftime("%H:%M"), visit_bookings_path(one_visit), method: :post  %>
              </div>
            <% end %>
          <% end %>

        
<!-- Button to trigger modal -->
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#chatbox">Send Request to Join the Tour</button>
<!-- End Button to trigger modal -->
        <% if @tour.visits.first %>
          <% @tour.visits.each do |visit| %>
            <%= visit.start_time %>
            <%= link_to "Sign up for this tour!", visit_bookings_path(visit), method: :post  %>
          <% end %>
        <% else %>
          <!-- <p>We don't offer any tours at the moment</p> -->
        <% end %>

        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="chatbox" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Say something nice to your Tour Guide :D</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Your Message</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
          </div>
        </form>





       </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </div>
  </div>
</div>

</div>





