<!-- Form for creating a new tour -->
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
    <h1>Create a new tour</h1>
      <%= simple_form_for [@user, @tour] do |f| %>
        <%= f.input :city %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>

